@using Adultus.ViewModels

@model LayoutViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Profile Roles</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Roles to Profiles</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <span>Role Name</span>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Roles, new SelectList(Model.Roles,
                    "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Roles.First().name, "", new { @class = "text-danger" })
            </div>
        </div>
        <span>Profile Name</span>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Profiles, new SelectList(Model.Profiles,
                    "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Profiles, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

