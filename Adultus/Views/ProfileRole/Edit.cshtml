@using Adultus.Models
@using Adultus.ViewModels

@model LayoutViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@Styles.Render("~/Content/css")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    for(var i = 0; i< Model.ProfileRoles.Count;i++){
     <div class="form-group">
         @Html.LabelFor(model => model.ProfileRoles.First().ProfileName, htmlAttributes: new {@class = "control-label col-md-2"})
         <div class="col-md-10">
             @Html.EditorFor(x => Model.ProfileRoles[i].ProfileName)
             @Html.ValidationMessageFor(model => model.ProfileRoles.First().ProfileName, "", new {@class = "text-danger"})
         </div>
     </div>
     <div class="form-group">
         @Html.LabelFor(model => model.ProfileRoles.First().RoleName, htmlAttributes: new {@class = "control-label col-md-2"})
         <div class="col-md-10">
             @Html.EditorFor(x => Model.ProfileRoles[i].RoleName)
             @Html.ValidationMessageFor(model => model.ProfileRoles.First().RoleName, "", new {@class = "text-danger"})
         </div>
     </div>
 }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default"/>
        </div>
    </div>
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")


