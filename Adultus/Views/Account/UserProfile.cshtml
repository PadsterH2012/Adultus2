@using Adultus.Models
@using Adultus.ViewModels

@model LayoutViewModel
@{
    ViewBag.Title = "UserProfile";
}

<h2>UserProfile</h2>
@using (Html.BeginForm("UserProfile", "Account", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr/>
        @Html.HiddenFor(model => model.User.Id);
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.User.UserName, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.User.UserName, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.User.UserName, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.Email, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.User.Email, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.User.Email, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.DateOfBirth, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.User.DateOfBirth, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.User.DateOfBirth, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.AccountBalance, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DisplayFor(model => model.User.AccountBalance, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.User.AccountBalance, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.OnlineStatus, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DisplayFor(model => model.User.OnlineStatus, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.User.OnlineStatus, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.Gender, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DisplayFor(model => model.User.Gender, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.User.Gender, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.GenderPreference, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DisplayFor(model => model.User.GenderPreference, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.User.GenderPreference, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.GenderPreference, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                <img src="@Url.Content("~/img/" + Model.User.ProfilePic)" alt="Image"/>
            </div>
        </div>
        <input type="file" name="file"/>

        <div class="form-group">
            @Html.LabelFor(model => model.Profiles.First().name, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DisplayFor(model => model.User.OnlineStatus, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.User.OnlineStatus, "", new {@class = "text-danger"})
            </div>
        </div>

        <span>Roles</span>
        @foreach (ProfileRoles profileRoles in Model.ProfileRoles)
        {
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DisplayFor(model => profileRoles.RoleName)
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save Profile" class="btn btn-default"/>
            </div>
        </div>
    </div>

    <div>
    @Html.ActionLink("Back to List", "Index")
    </div>
}
