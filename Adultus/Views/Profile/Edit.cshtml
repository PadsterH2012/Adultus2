@using Adultus.ViewModels

@model LayoutViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@Styles.Render("~/Content/css")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Profiles</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Profiles.First().Id)
      
        @for(var i = 0; i< Model.Profiles.Count;i++){
            <div class="form-group">
                @Html.LabelFor(model => model.Profiles.First().name, htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(x => Model.Profiles[i].name)
                    @Html.ValidationMessageFor(model => model.Profiles.First().name, "", new {@class = "text-danger"})
                </div>
            </div>
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

